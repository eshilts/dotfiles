# Color highlighting of output makes stuff easier to read
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = green reverse
    local = green
    remote = yellow
[color "diff"]
    meta = yellow
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow bold
    changed = red bold
    untracked = cyan
# The "lol" alias stands for "log one line" and
# shows a great summary of your repo
[alias]
    lol = log --oneline --graph --decorate
